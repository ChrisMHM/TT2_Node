<!--Header section-->
<%- include('../includes/header-main-menu.ejs') %>

<!--    Section imagenes-->
<section class="form-container">
    <div class="container-fluid frame-form">
        <h2>Cambiar mi correo electrónico</h2>
        <form action="" class="max-width container">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="idNuevoCorreo">Nuevo correo</label>
                    <input type="text" class="form-control" id="idNuevoCorreo">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label for="idRepetirCorreo">Vuelve a ingresar el nuevo correo</label>
                    <input type="text" class="form-control" id="idRepetirCorreo">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="idContrasenia">Contraseña</label>
                    <input type="password"  class="form-control" id="idContrasenia">
                </div>
            </div>
            <div class="row btn-container">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <a href="./account-menu" class="btn btn-form">Regresar</a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <button class="btn btn-form" type="submit">Guardar cambios</button>
                </div>
            </div>
        </form>
    </div>
</section>

