<%- include('../includes/head.ejs') %>

<body>
    <!--Header section-->
    <%- include('../includes/header.ejs') %>


    <!--Form section-->

    <section class="form-container">
        <div class="container-fluid frame-form">
            <% errores.forEach((mensaje) => { %>
            <div class="alert alert-danger text-center"><%= mensaje %></div>
            <% }) %>
            <h2>Registro</h2>
            <!-- Registro -->
            <div id="form-registro" class="container-fluid "><br>
                <form action="/main/registro-post" method="POST">

                    <% registroErrores.forEach((mensaje) => { %>
                    <div class="alert alert-danger small"><%= mensaje %></div>
                    <% }) %>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="input-name">Nombre(s)</label>
                            <input name="nombres" type="text" class="form-control" id="input-name"
                                placeholder="Nombre(s)" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="input-surname1">Apellido paterno</label>
                            <input name="apellidoPa" type="text" class="form-control" id="input-surname1"
                                placeholder="Apellido paterno" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="input-surname2">Apellido materno</label>
                            <input name="apellidoMa" type="text" class="form-control" id="input-surname2"
                                placeholder="Apellido materno" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="input-email">Correo</label>
                            <input name="correo" type="email" class="form-control" id="input-email" placeholder="Correo"
                                required>
                        </div>
                        <div class="form-group col-md-6 dropdown-form">
                            <label for="input-num-dro">Número de DRO</label>
                            <input name="numeroDRO" type="text" id="input-num-dro" maxlength="5" class="form-control"
                                placeholder="Número de DRO" required>
                        </div>
                        <!--
                    <div class="form-group col-md-6">
                        <label for="input-cedula">Cédula profesional</label>
                        <input name="cedula" type="text" class="form-control" id="input-cedula" placeholder="Cédula profesional">
                    </div> -->
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12 dropdown-form">
                            <label for="input-dro">Tipo de DRO</label>
                            <select name="tipoDRO" id="input-dro" class="form-control" required>
                                <option value="1" selected>DRO</option>
                                <option value="2">CSE</option>
                                <option value="3">CDUYA</option>
                                <option value="4">PDU</option>
                                <option value="5">CI</option>
                                <option value="6">PREY</option>
                            </select>
                        </div>
                        <!--
                    <div class="form-group col-md-4 dropdown-form">
                        <label for="input-situation">Situación</label>
                        <select name="situacionDRO" id="input-situation" class="form-control">
                            <option value="0" selected>Elegir</option>
                            <option value="1">Vigente</option>
                            <option value="2">No vigente</option>
                            <option value="3">Sancionado</option>
                            <option value="4">Cancelado</option>
                            <option value="5">Finado</option>
                        </select>
                    </div> -->
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="input-password">Contraseña</label>
                            <input name="password" type="password" class="form-control" id="input-password"
                                placeholder="Al menos 8 dígitos" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="input-password-confirm">Repetir contraseña</label>
                            <input name="repetirPassword" type="password" class="form-control"
                                id="input-password-confirm" placeholder="Repetir contraseña" required>
                        </div>
                    </div>
                    <div class="btn-container">
                        <button type="submit" class="btn btn-form">Registrar</button>
                    </div>
                </form>
            </div>
            <!-- Fin registro -->
        </div>
    </section>

    <script src=""></script>

    <!--Footer section-->
    <%- include('../includes/footer.ejs') %>